        <div class="form-group">
            @Html.LabelFor(model => model.CoachCoachId, "CoachCoachId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CoachCoachId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CoachCoachId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
